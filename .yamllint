---
extends: default
rules:
  line-length:
    max: 120
    level: warning
  indentation:
    spaces: 2
  comments:
    min-spaces-from-content: 2
  comments-indentation: {}
  document-start: disable
  truthy:
    allowed: ['true', 'false', 'yes', 'no']
ignore: |
  .github/appmod/
  node_modules/
  vendor/
